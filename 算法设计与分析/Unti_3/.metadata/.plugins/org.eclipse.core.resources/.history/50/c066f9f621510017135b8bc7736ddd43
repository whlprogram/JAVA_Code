package test;

import java.util.Scanner;

public class tast2 {

	public static void main(String[] args) {
		// TODO 自动生成的方法存根
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int p[] = new int[n+1];
		for(int i=0; i<=n; i++)
			p[i] = scan.nextInt();
		int m[][] = new int[n+1][n+1];
		int s[][] = new int[n+1][n+1];
		matrix(n, p, m, s);
		String sss = t(1, n, s);
		System.out.println(sss);
	}
	public static String t(int i, int j, int s[][]){
		if(i == j)
			return "A"+i;
		else 
			return "(" + t(i, s[i][j], s) + t(s[i][j]+1, j, s)+")";
	}
	public static void matrix(int n, int p[], int m[][], int s[][]){
		for(int i=0; i<=n; i++)
			m[i][i] = 0;
		for(int r=2; r<=n; r++)
			for(int len=1; len<=n-(r-1); len++){
				int j = len+(r-1);
				m[len][j] = m[len][len] + m[len+1][j] + p[len-1]*p[len]*p[j];
				s[len][j] = len;
				for(int k=len+1; k<j; k++){
					int t = m[len][k] + m[k+1][j] + p[len-1]*p[k]*p[j];
					if(t<m[len][j]){
						m[len][j] = t;
						s[len][j] = k;
					}
				}
			}
	}
}
