package Perm;

public class Perm {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int list[] = {1,2,3,4};
		Perm(list,3,3);
	}
	public static void Perm(int list[], int k, int m){
		if (k == m){//只剩下一个元素
			for (int i = 0; i <= m; i++)
				System.out.print(list[i]);
			System.out.println();
		}
		else{//还有多个元素待排列,递归产生排列
			for (int i = k; i <= m; i++){
				Swap(list[k],list[i]);
				Perm(list,k+1,m);
				Swap(list[k], list[i]);
			}
		}
	}
	 public static void Swap(int a, int b){
		int temp = a;
		a = b;
		b = temp;
	}
}
